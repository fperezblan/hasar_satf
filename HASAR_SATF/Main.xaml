<Window x:Class="HASAR_SATF.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HASAR_SATF"
        mc:Ignorable="d"
        Title="HASAR SATF" Height="550" Width="830" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="293*"/>
            <ColumnDefinition Width="107*"/>
        </Grid.ColumnDefinitions>
        <TabControl x:Name="tabControl" Grid.ColumnSpan="2"  >
            <TabItem Header="Información Fiscal">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="Conexión" Grid.Column="0" Padding="15">
                        <StackPanel >
                            <Label x:Name="label" Content="IP Controlador" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="tb_IP" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="230" Height="40" FontSize="30"/>
                            <Label x:Name="label_Copy" Content="Puerto" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="tb_Puerto" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="80" VerticalAlignment="Top" Width="230" Height="40" FontSize="30"/>
                            <Border Height="20"/>
                            <Button x:Name="btn_Conectar" Content="Conectar" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Width="230" Height="40" Click="btn_Conectar_Click" FontSize="15"/>
                            <Border Height="20"/>
                            <Button x:Name="btn_Actualizar" Content="Actualizar estado" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Width="230" Height="40" Click="btn_Actualizar_Click" IsEnabled="False" FontSize="15"/>
                        </StackPanel>
                    </GroupBox>

                    <StackPanel Grid.Column="1">
                        <GroupBox Header="Datos fiscales" Padding="15">
                            <StackPanel>
                                <Label x:Name="lbl_razonsocial" Content="Razón social: " HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top"/>
                                <Label x:Name="lbl_responsabilidadanteeliva" Content="Responsabilidad ante el IVA: " HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top"/>
                                <Label x:Name="lbl_numeropuntodeventa" Content="Número de Punto de Venta: " HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top"/>
                                <Label x:Name="lbl_Cuit" Content="CUIT: " HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top"/>
                                <Label x:Name="lbl_IngresosBrutos" Content="Ingresos Brutos: " HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top"/>
                                <Label x:Name="lbl_InicioActividades" Content="Fecha de inicio actividades: " HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top"/>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="Estado impresora fiscal" Grid.Column="1" Padding="15">
                            <StackPanel>
                                <Label x:Name="lbl_ultimocbte" Content="Último comprobante emitido: " HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top"/>
                                <Label x:Name="lbl_estadoFiscal" Content="Estado fiscal: " HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top"/>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="Instrucciones" Grid.Column="1" Padding="15">
                            <StackPanel>
                                <TextBlock x:Name="tbInstructions" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top"  Width="490" TextWrapping="Wrap">
                                    *Tener en cuenta que el último comprobante emitido corresponde al último tipo de comprobante que se usó.
                                    <LineBreak/>
                                    *Estado EnJornadaFiscal significa que ya se ha emitido al menos un comprobante en esta jornada.                                    
                                    <LineBreak/>
                                    *InicioJornadaFiscal significa que aún no se han emitido comprobantes en esta jornada.
                                    <LineBreak/>
                                    *En el resto de los estados no se podrán emitir comprobantes nuevos. Si es un error, pulsar el botón "Cancelar documento".
                                </TextBlock>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Pruebas">
                <Grid  >
                    <Button x:Name="btn_CierreZ" Content="Cierre Z" HorizontalAlignment="Left" Margin="25,16,0,0" VerticalAlignment="Top" Height="60" Width="123" Click="btn_CierreZ_Click"/>
                    <Button x:Name="btn_CierreX" Content="Cierre X" HorizontalAlignment="Left" Margin="25,81,0,0" VerticalAlignment="Top" Height="60" Width="123" Click="btn_CierreX_Click"/>
                    <Button x:Name="btn_PruebaFTA" Content="Factura A" HorizontalAlignment="Left" Margin="25,151,0,0" VerticalAlignment="Top" Height="60" Width="123" Click="btn_PruebaFTA_Click"/>
                    <Button x:Name="btn_PruebaFTB" Content="Factura B" HorizontalAlignment="Left" Margin="25,216,0,0" VerticalAlignment="Top" Height="60" Width="123" Click="btn_PruebaFTB_Click"  />
                    <Button x:Name="btn_PruebaDNFH" Content="DNFH" HorizontalAlignment="Left" Margin="25,281,0,0" VerticalAlignment="Top" Height="60" Width="123" Click="btn_PruebaDNFH_Click" IsEnabled="False"/>
                    <Button x:Name="btn_CancelarDocumentoActual" Content="Cancelar documento" HorizontalAlignment="Left" Margin="25,346,0,0" VerticalAlignment="Top" Height="60" Width="123" Click="btn_CancelarDocumentoActual_Click"   Background="Salmon"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
